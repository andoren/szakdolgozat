                <TextBox Margin="5"  IsReadOnly="True" AcceptsReturn="True" FontSize="30" x:Name="NapiIge" TextWrapping="Wrap" Background="Transparent" BorderBrush="Transparent" />
            </StackPanel>
            
        </Grid>
        
