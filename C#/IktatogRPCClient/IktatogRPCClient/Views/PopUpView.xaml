<Window x:Class="IktatogRPCClient.Views.PopUpView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IktatogRPCClient.Views"
        mc:Ignorable="d"
        AllowsTransparency="True"
        FontFamily="Robot"
        FontSize="22"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStyle="None" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight" >
    <Border BorderBrush="Black" Background="White" BorderThickness="2">
        <Grid>
            <ContentControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="ActiveItem"></ContentControl>
        </Grid>
    </Border>
</Window>
